<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:autofillHints="date"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/enter_date"
        android:inputType="date"
        android:shadowColor="@color/black"
        android:text="@string/enter_date"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textColorHighlight="@color/purple_500"
        android:textColorHint="@color/purple_200"
        android:textColorLink="@color/purple_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="end"
            android:text="@string/Fajar"
            android:textAlignment="viewStart"
            android:textColor="@color/purple_500"
            android:textColorLink="@color/teal_200"
            android:textSize="28sp" />

        <CheckBox
            android:id="@+id/checkFajar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:layout_weight="1"
            android:backgroundTint="#9C27B0"
            android:buttonTint="@color/teal_200"
            android:textAlignment="textEnd"
            android:textColor="@color/purple_500"
            android:textColorLink="@color/teal_700"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="end"
            android:text="@string/Zuhr"
            android:textAlignment="viewStart"
            android:textColor="@color/purple_500"
            android:textColorLink="@color/teal_200"
            android:textSize="28sp" />

        <CheckBox
            android:id="@+id/checkZuhr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:layout_weight="1"
            android:backgroundTint="#9C27B0"
            android:buttonTint="@color/teal_200"
            android:textColor="@color/purple_500"
            android:textColorLink="@color/teal_700"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="end"
            android:text="@string/Asar"
            android:textAlignment="viewStart"
            android:textColor="@color/purple_500"
            android:textColorLink="@color/teal_200"
            android:textSize="28sp" />

        <CheckBox
            android:id="@+id/checkAsar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:layout_weight="1"
            android:backgroundTint="#9C27B0"
            android:buttonTint="@color/teal_200"
            android:textColor="@color/purple_500"
            android:textColorLink="@color/teal_700"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="end"
            android:text="@string/maghrib"
            android:textAlignment="viewStart"
            android:textColor="@color/purple_500"
            android:textColorLink="@color/teal_200"
            android:textSize="28sp" />

        <CheckBox
            android:id="@+id/checkMaghrib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:layout_weight="1"
            android:backgroundTint="#9C27B0"
            android:buttonTint="@color/teal_200"
            android:textColor="@color/purple_500"
            android:textColorLink="@color/teal_700"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="end"
            android:text="@string/esha"
            android:textAlignment="viewStart"
            android:textColor="@color/purple_500"
            android:textColorLink="@color/teal_200"
            android:textSize="28sp" />

        <CheckBox
            android:id="@+id/checkEsha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:backgroundTint="#9C27B0"
            android:buttonTint="@color/teal_200"
            android:textColor="@color/purple_500"
            android:textColorLink="@color/teal_700"
            android:textSize="28sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shadowColor="@color/teal_200"
        android:text="@string/submit"
        android:textColor="@color/teal_200"
        android:textColorHighlight="@color/teal_200"
        android:textColorHint="@color/teal_200"
        android:textColorLink="@color/teal_200" />


</LinearLayout>